@model IEnumerable<InForno.Models.Order>

@{
    ViewData["Title"] = "Ordini";
}

<h2>Ordini</h2>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Data Ordine</th>
            <th>Indirizzo di Spedizione</th>
            <th>Note</th>
            <th>Stato</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.OrderDate</td>
                <td>@order.ShippingAddress</td>
                <td>@order.Notes</td>
                <td>@(order.IsProcessed ? "Evaso" : "In attesa")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-primary">Dettagli</a>
                    @if (!order.IsProcessed)
                    {
                        <form asp-action="UpdateStatus" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@order.Id" />
                            <input type="hidden" name="isProcessed" value="true" />
                            <button type="submit" class="btn btn-success">Segna come Evaso</button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="DailyReport" class="btn btn-info">Rapporto giornaliero</a>
