@model InForno.Models.Order

@{
    ViewData["Title"] = "Dettagli Ordine";
}

<h2>Dettagli Ordine</h2>

<div>
    <h4>Ordine @Model.Id</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Data Ordine
        </dt>
        <dd class="col-sm-10">
            @Model.OrderDate
        </dd>
        <dt class="col-sm-2">
            Indirizzo di Spedizione
        </dt>
        <dd class="col-sm-10">
            @Model.ShippingAddress
        </dd>
        <dt class="col-sm-2">
            Note
        </dt>
        <dd class="col-sm-10">
            @Model.Notes
        </dd>
        <dt class="col-sm-2">
            Stato
        </dt>
        <dd class="col-sm-10">
            @(Model.IsProcessed ? "Evaso" : "In attesa")
        </dd>
    </dl>

    <h4>Dettagli Prodotti</h4>
    <table class="table">
        <thead>
            <tr>
                <th>Prodotto</th>
                <th>Quantità</th>
                <th>Prezzo</th>
                <th>Totale</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var detail in Model.OrderDetails)
            {
                <tr>
                    <td>@detail.Product.Name</td>
                    <td>@detail.Quantity</td>
                    <td>@string.Format("{0:C}", detail.Product.Price)</td>
                    <td>@string.Format("{0:C}", detail.Product.Price * detail.Quantity)</td>
                </tr>
            }
        </tbody>
    </table>

    <a asp-action="Index" class="btn btn-secondary">Indietro</a>
</div>
