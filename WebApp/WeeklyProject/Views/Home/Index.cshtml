@{
    ViewData["Title"] = "In Forno - Home";
    var userId = ViewBag.UserId as int?;
    var userRole = ViewBag.UserRole as string;
}

<div class="container mt-5">
    <div class="jumbotron text-center bg-primary text-white">
        <h1 class="display-4">Benvenuti a In Forno</h1>
        <p class="lead">Le migliori pizze della città, consegnate direttamente a casa tua!</p>
        <a class="btn btn-light btn-lg mb-2" href="/Product/List" role="button">Ordina Ora</a>
    </div>

    <div class="row mt-5">
        <div class="col-md-4">
            <div class="card">
                <img src="https://www.example.com/pizza1.jpg" class="card-img-top" alt="Pizza Margherita">
                <div class="card-body">
                    <h5 class="card-title">Pizza Margherita</h5>
                    <p class="card-text">La classica pizza italiana con pomodoro, mozzarella e basilico fresco.</p>
                    <a href="#" class="btn btn-primary w-100">Scopri di più</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <img src="https://www.example.com/pizza2.jpg" class="card-img-top" alt="Pizza Diavola">
                <div class="card-body">
                    <h5 class="card-title">Pizza Diavola</h5>
                    <p class="card-text">Una pizza piccante con salame piccante, peperoncino e mozzarella.</p>
                    <a href="#" class="btn btn-primary w-100">Scopri di più</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <img src="https://www.example.com/pizza3.jpg" class="card-img-top" alt="Pizza Quattro Stagioni">
                <div class="card-body">
                    <h5 class="card-title">Pizza Quattro Stagioni</h5>
                    <p class="card-text">Una pizza divisa in quattro parti, ciascuna con un topping diverso.</p>
                    <a href="#" class="btn btn-primary w-100">Scopri di più</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-12 text-center">
            <h2>Testimonianze</h2>
            <p class="lead">Cosa dicono i nostri clienti</p>
        </div>
        <div class="col-md-4">
            <blockquote class="blockquote">
                <p class="mb-0">"La pizza migliore che abbia mai mangiato! Servizio eccellente."</p>
                <footer class="blockquote-footer mt-2">Mario Rossi</footer>
            </blockquote>
        </div>
        <div class="col-md-4">
            <blockquote class="blockquote">
                <p class="mb-0">"Ingredienti freschissimi e consegna veloce. Consigliatissimo!"</p>
                <footer class="blockquote-footer mt-2">Lucia Bianchi</footer>
            </blockquote>
        </div>
        <div class="col-md-4">
            <blockquote class="blockquote">
                <p class="mb-0">"Ottima varietà di pizze e servizio clienti impeccabile."</p>
                <footer class="blockquote-footer mt-2">Giovanni Verdi</footer>
            </blockquote>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-12 text-center">
            @if (userId == null)
            {
                <a href="@Url.Action("Login", "User")" class="btn btn-primary">Login</a>
                <a href="@Url.Action("Register", "User")" class="btn btn-secondary">Register</a>
            }
            else
            {
                <p>Benvenuto, @userRole!</p>
                <a href="@Url.Action("Logout", "User")" class="btn btn-danger">Logout</a>
            }
        </div>
    </div>
</div>
